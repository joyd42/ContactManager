@using ContactManager.ViewModels
@using ContactManager.Controllers
@model HomeViewModel



<!DOCTYPE html>
<html>
<head>
    <title>Contact Manager Index</title>
</head>
<body>

@using (Html.BeginForm("Contacten", "Home"))
{
    <p>
        Naam: @Html.TextBox("filter")
        <input type="submit" value="Zoek"/>

    </p>
}

<table style="height: 80%">
    <tr>
        <th>Id</th>
        <th>Naam</th>
        <th>Straat</th>
        <th>Gemeente</th>
        <th>Land</th>
    </tr>

    @foreach (var contact in Model.ContactenMetNaam)
    {
        <tr>
            <td>@contact.Id</td>
            <td>@Html.ActionLink(contact.Naam, "Contacten", new {actiefContactId = contact.Id})</td>
            <td>@contact.Adres.Straat</td>
            <td>@contact.Adres.Locatie</td>
            <td>@contact.Adres.Land</td>
        </tr>
    }
</table>
    
<div style="position: absolute; top: 10px; right: 10px">
    Naam: @Model.ActiefContact.Naam<br/>
    Straat: @Model.ActiefContact.Adres.Straat<br />
    Gemeente: @Model.ActiefContact.Adres.Locatie<br />
</div>




</body>
</html>